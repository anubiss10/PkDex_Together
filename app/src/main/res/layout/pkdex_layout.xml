<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <!-- Barra superior de información -->

        <TextView
            android:id="@+id/infoTitle"
            android:layout_width="97dp"
            android:layout_height="31dp"
            android:background="#FF0000"
            android:padding="10dp"
            android:text="INFO"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <!-- Imagen del Pokémon -->


        <!-- Nombre del Pokémon -->

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="411dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/pokede_layout" />

        <ImageView
            android:id="@+id/pokemonImage"
            android:layout_width="181dp"
            android:layout_height="177dp"
            android:layout_marginLeft="-350dp"
            android:background="#00FF00"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="82dp" />

        <TextView
            android:id="@+id/pokemonName"
            android:layout_width="354dp"
            android:layout_height="30dp"
            android:background="#FF4500"
            android:padding="2dp"
            android:text="Nombre del Pokémon"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="351dp" />


        <!-- Título del Pokémon -->


        <!--  Tipo del Pokémon -->


        <!-- Altura del Pokémon (HT) -->


        <!-- Peso del Pokémon (WT) -->

        <!-- Descripción del Pokémon -->

        <TextView
            android:id="@+id/pokemonTitle"
            android:layout_width="376dp"
            android:layout_height="23dp"
            android:background="#0000FF"
            android:padding="2dp"
            android:text="Título del Pokémon"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/pokemonName"
            tools:layout_editor_absoluteX="329dp" />

        <TextView
            android:id="@+id/pokemonType"
            android:layout_width="113dp"
            android:layout_height="36dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="250dp"
            android:background="#FFC0CB"
            android:padding="3dp"
            android:text="Tipo"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.472"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pokemonTitle" />

        <TextView
            android:id="@+id/pokemonHeight"
            android:layout_width="91dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="202dp"
            android:background="#D3D3D3"
            android:padding="4dp"
            android:text="HT"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/pokemonType"
            tools:layout_editor_absoluteX="488dp" />

        <TextView
            android:id="@+id/pokemonWeight"
            android:layout_width="92dp"
            android:layout_height="31dp"
            android:background="#FFFF00"
            android:padding="4dp"
            android:text="WT"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/pokemonDescription"
            app:layout_constraintTop_toBottomOf="@+id/pokemonHeight"
            app:layout_constraintVertical_bias="0.142"
            tools:layout_editor_absoluteX="488dp" />

        <TextView
            android:id="@+id/pokemonDescription"
            android:layout_width="630dp"
            android:layout_height="103dp"
            android:background="#800080"
            android:padding="6dp"
            android:text="Descripción del Pokémon"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pokemonImage" />

        <!-- Imagen Pokedex -->

    </androidx.constraintlayout.widget.ConstraintLayout>




</LinearLayout>